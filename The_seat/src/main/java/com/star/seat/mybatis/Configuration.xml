<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 자주 사용하는 type 의 별칭을 등록 해놓고  Mapper xml 에서 사용할 수 있다. -->
	<typeAliases>
		<typeAlias type="com.star.seat.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.star.seat.store.dto.StoreDto" alias="storeDto"/>
		<typeAlias type="com.star.seat.menu.dto.MenuDto" alias="menuDto"/>
	</typeAliases>
	
	<!-- 필요한 Mapper xml 등록하기  -->
	<mappers>
		<mapper resource="com/star/seat/mybatis/UsersMapper.xml"/>
		<mapper resource="com/star/seat/mybatis/StoreMapper.xml"/>
		<mapper resource="com/star/seat/mybatis/MenuMapper.xml"/>
	</mappers>
</configuration>


